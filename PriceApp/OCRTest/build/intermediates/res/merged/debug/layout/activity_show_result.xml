<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="showresult.ShowResult">

    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/productname1"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Here"
        android:layout_alignBaseline="@+id/productname"
        android:layout_alignBottom="@+id/productname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />

    <TextView
        android:id="@+id/productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Product Price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/productname1"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/productprice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/productprice"
        android:layout_alignBottom="@+id/productprice"
        android:layout_alignLeft="@+id/productname1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Here" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Purchase Date"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/productprice1"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/purchasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_alignLeft="@+id/productprice1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Here" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/purchasedate"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>
